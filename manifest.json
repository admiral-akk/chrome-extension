{
    "manifest_version": 2,
    "name": "Chrome Plugin",
    "description": "Testing Plugin",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ]
        },
        {
            "matches": [
                "https://bloomberg.com/*",
                "https://www.bloomberg.com/*",
                "https://nytimes.com/*",
                "https://www.nytimes.com/*"
            ],
            "js": [
                "redirect.js"
            ]
        },
        {
            "matches": [
                "https://archive.ph/*"
            ],
            "js": [
                "archive.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "storage",
        "https://ajax.googleapis.com/"
    ]
}